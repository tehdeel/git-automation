{
    "name": "coylone/git-automation",
    "description": "Automation for some jobs between git and jira",
    "authors": [
        {
            "name": "Vasil coylOne Kulakov",
            "email": "iam@vasiliy.pro"
        }
    ],
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "files": [
            "app/AppKernel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.5.9",
        "coyl/git": "~0.1.0",
        "symfony/symfony": "3.0.0",
        "chobie/jira-api-restclient": "2.0.*-dev",
        "incenteev/composer-parameter-handler": "^2.0",
        "coyl/jira-api-rest-client-bundle": "~0.1"
    },
    "require-dev": {
        "sensio/generator-bundle": "^3.0",
        "symfony/phpunit-bridge": "^2.7"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
